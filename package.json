{
  "name": "shops",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "16.x"
  },
  "scripts": {
    "postinstall": "yarn husky install",
    "build": "yarn && yarn lerna exec yarn && yarn lerna run build",
    "bootstrap": "yarn build && yarn lerna bootstrap",
    "lerna:publish": "yarn lerna run test && yarn lerna run build && yarn lerna publish --exact",
    "prettier:check": "prettier --check --single-quote \"./**/*.{ts,tsx,js,vue,scss}\"",
    "prettier:write": "prettier --write --single-quote \"./**/*.{ts,tsx,js,vue,scss}\"",
    "e2e": "cd packages/e2e && yarn e2e"
  },
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^16.3.0",
    "@commitlint/config-conventional": "^16.2.4",
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "prettier": "2.6.2"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "scope-enum": [
        2,
        "always",
        [
          "vendure",
          "directus",
          "e2e",
          "seo",
          "storefront-client",
          "all-clients",
          "bendeboef",
          "cantastic",
          "cryptherion",
          "danielvdhaterd",
          "lab07",
          "marcdefotograaf",
          "minishop",
          "op",
          "super-a",
          "wkw"
        ]
      ]
    }
  },
  "dependencies": {}
}
